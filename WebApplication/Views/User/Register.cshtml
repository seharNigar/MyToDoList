
@model Models.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{


    ViewBag.Title = "Register";


}
<div class="container">
    <div class="signup-content">
        <div class="signup-form">
            <h2 class="form-title">Sign up</h2>
            <form asp-controller="User" asp-action="Register" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input type="text" asp-for="Name" id="name" placeholder="Your UserName" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                    <input type="email" asp-for="Email" id="email" placeholder="Your Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Number"><i class="zmdi zmdi-phone"></i></label>
                    <input type="text" asp-for="Number" id="number" placeholder="Your Number" />

                </div>
                <span class="text-danger" asp-validation-for="Number"></span>

                <div class="form-group">
                    <label asp-for="City"><i class="zmdi zmdi-city"></i></label>
                    <input type="text" asp-for="City" id="city" placeholder="Your City" />
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address"><i class="zmdi zmdi-my-location"></i></label>
                    <input type="text" asp-for="Address" id="address" placeholder="Your Address" />
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                    <input asp-for="Password" type="password" id="pass" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                    <input asp-for="ConfirmPassword" type="password" id="re_pass" placeholder="Repeat your password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>


                <div>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <span class="zmdi zmdi-calendar-note"></span>
                        </div>
                        <input asp-for="DateOfBirth" type="text" id="txt_datepicker" class="form-control datepicker" />
                        <span class="text-danger" asp-validation-for="DateOfBirth"></span>

                    </div>
                </div>
               

                <br />


                <div class="custom-file mb-3">
                    <label asp-for="Photo" class="custom-file-label">Choose file</label>
                    <input asp-for="Photo" type="file" class="custom-file-input" id="customFile">

                </div>


                <div class="form-group form-button">
                    <input type="submit" class="form-submit" value="Register" />
                </div>
            </form>
        </div>
        <div class="signup-image">
            <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
            <a asp-action="Login" class="signup-image-link">I am already member</a>
        </div>
    </div>
</div>
